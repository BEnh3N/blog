---
import BaseLayout from "./BaseLayout.astro";
import Tag from "../components/Tag.astro";
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"posts">;
}

const { post } = Astro.props;
const frontmatter = post.data;
---

<BaseLayout pageTitle={frontmatter.title}>
  <div class="h-dvh overflow-y-auto p-10">
    <div class="mx-auto my-10 max-w-screen-md text-center">
      <div class="mb-2 aspect-video">
        <Image
          src={frontmatter.image.url}
          alt={frontmatter.image.alt}
          class="size-full rounded-sm object-cover"
        />
      </div>
      <p>
        {frontmatter.pubDate.getUTCMonth() + 1}/{
          frontmatter.pubDate.getUTCDate()
        }/{frontmatter.pubDate.getUTCFullYear().toString().slice(2)}
      </p>
      <p class="text-xl font-bold underline md:text-2xl lg:text-3xl">
        {frontmatter.title}
      </p>
      <p>{frontmatter.description}</p>
    </div>
    <!-- <div class="flex flex-wrap gap-2 pt-1">
          {frontmatter.tags.map((tag: string) => <Tag tag={tag} />)}
        </div> -->
    <div class="prose dark:prose-invert prose-neutral mx-auto font-sans">
      <hr />
      <slot />
    </div>
  </div>
</BaseLayout>
