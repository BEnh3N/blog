---
import BaseLayout from "../layouts/BaseLayout.astro";
import ASCII from "../components/ASCII.astro";
const pageTitle = "BEnh3N's Portfolio";

const options = ["programmer", "photographer", "student", "musician", "gamer"];
---

<BaseLayout pageTitle={pageTitle}>
  <div
    class="flex h-screen flex-col justify-center pt-10 md:flex-row md:justify-evenly"
  >
    <!-- ASCII Art -->
    <div class="flex basis-1/3 justify-center md:my-auto md:justify-end">
      <ASCII />
    </div>

    <!-- Intro -->
    <div
      class="flex basis-1/3 justify-center md:my-auto md:justify-start md:text-left"
    >
      <p class="my-auto text-center md:text-left">
        hello, my name is<br />
        <span class="text-5xl font-bold">bennett</span>
        <br />i'm a
        <span id="typer">{options[0]}</span><span id="cursor">|</span>

        <script is:inline type="module" define:vars={{ options }}>
          function sleep(ms) {
            return new Promise((resolve) => setTimeout(resolve, ms));
          }

          const typer = document.getElementById("typer");
          const cursor = document.getElementById("cursor");

          let handle;
          function startBlink() {
            handle = setInterval(() => {
              cursor.style.visibility =
                cursor.style.visibility === "hidden" ? "visible" : "hidden";
            }, 500);
          }
          function stopBlink() {
            cursor.style.visibility = "visible";
            clearInterval(handle);
          }

          async function replaceTyper() {
            const current = typer.innerText;
            const next =
              options[(options.indexOf(current) + 1) % options.length];

            const CHAR_DELAY = 40;
            const WORD_DELAY = 2300;

            stopBlink();

            while (typer.innerText.length > 0) {
              typer.innerText = typer.innerText.slice(0, -1);
              // wait
              await sleep(CHAR_DELAY);
            }

            // type in next
            for (let i = 0; i < next.length; i++) {
              typer.innerText += next[i];
              await sleep(CHAR_DELAY);
            }

            startBlink();

            // wait
            await sleep(WORD_DELAY);
            replaceTyper();
          }

          startBlink();
          setTimeout(() => {
            replaceTyper();
          }, 3000);
        </script>
      </p>
    </div>
  </div>
</BaseLayout>
