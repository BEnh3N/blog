---
const { post } = Astro.props;
const frontmatter = post.data;
---

<div
  class="w-full rounded-md bg-accent-button p-2 font-display shadow-border transition-all hover:bg-accent-button-elevated active:scale-95"
>
  <a href={`/posts/${post.slug}/`}>
    <div class="mb-2 aspect-video">
      <img
        src={frontmatter.image.url}
        alt={frontmatter.image.alt}
        class="h-full rounded-md object-cover"
      />
    </div>
    <p class="text-lg">{frontmatter.title}</p>
    <p class="text-accent-subtext">
      {frontmatter.pubDate.toString().slice(4, 15)}
    </p>
  </a>
</div>
