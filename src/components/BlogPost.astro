---
import { Image } from "astro:assets";

const { post } = Astro.props;
const frontmatter = post.data;
---

<div class="text-balance">
  <div class="mb-2 aspect-video overflow-clip rounded-sm">
    <a href={`/posts/${post.slug}/`}>
      <Image src={frontmatter.image.url} alt={frontmatter.image.alt} />
    </a>
  </div>
  <p>
    {frontmatter.pubDate.toLocaleDateString("en-US")}
  </p>
  <a
    class="text-xl font-bold underline md:text-2xl lg:text-3xl"
    href={`/posts/${post.slug}/`}>{frontmatter.title}</a
  >
  <p>{frontmatter.description}</p>
</div>
